def fibo_rec(n):
    if n <= 0:
        return 0
    elif n == 1:
        return 1
    else:
        return fibo_rec(n-1) + fibo_rec(n-2)

n = int(input("Ingresa el número de índice para calcular el número de Fibonacci: "))
resultado = fibo_rec(n)
print(f"El número de Fibonacci en el índice {n} es: {resultado}")
